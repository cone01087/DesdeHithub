<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
<template id="requisicion_print_view">
<t t-call="web.external_layout">
  <t t-foreach="docs" t-as="o">
    <div class="header">
      <style>
        *{
             font-family: 'Bitstream Charter';
             font-family::'Bitstream Vera Serif';
         }
        p,span,t {
          margin-top:0px;
          margin-bottom:0px;
          padding-top:0px;
          padding-bottom:0px;
          font-size:11px;
         }
        .duo {
            display:inline;
         }
         h4 {
          margin-top:0px;
          margin-bottom:0px;
          padding-top:0px;
          padding-bottom:0px;
          font-size:16px;
         }
      </style>
    	<div class="container" style="border: 1px solid gray;border-radius: 5px;margin-top:10px;">
        <t t-if="user.company_id">
          <div class="row" style="min-height:90;">            
              <div class="col-xs-12">
                  <div style="position:absolute;z-index:0;">
                      <img t-if="user.company_id.logo" t-att-src="'data:image/png;base64,%s' % user.company_id.logo" 
                              style="margin-top:10px;margin-left:5px;height: 75px;"/>
                   </div>
              </div>
            </div>
          </t>  
        </div>
    </div>
<div class="footer">
  <table style="width:100%;">
      <tr>
          <td class="text-center" style="width:50%;"><strong>Entregado por:__________________________________</strong> <br/><br/><br/></td>
          <td class="text-center" style="width:50%;"><strong>Recibido por:__________________________________</strong> <br/><br/><br/></td>  
      </tr>
    </table>
    <ul class="list-inline text-center">
      <li>Página:</li>
      <li><span class="page"/></li>
      <li>/</li>
      <li><span class="topage"/></li>
    </ul>
</div>
<div class="page">
<div class="oe_structure"/>

 <div class="row">
  <h2 class="text-center"><strong>Comprobante de recepción de Tabaco</strong></h2>
         <br/><br/>
  <h4 class="text-left"><strong><span t-field="o.name"/></strong></h4>
         <br/><br/>
    <table style="width:100%;">
      <tr >
        <td style="width:35%;">
          <strong>Procedencia: </strong><span t-field="o.proveedor.name" />   <br/>
        </td>
	      <td style="width:45%;">
		       <strong>Fecha: </strong><span t-field="o.fecha" />   <br/>
	      </td>
	      <td class="text-left" style="width:15%;"></td>
		  </tr>
      <tr>
        <td style="width:30%;">
           <strong>Total de bultos: </strong><span t-field="o.total_bultos" />   <br/>
        </td>
         <td style="width:70%;">
           <strong>Total peso neto: </strong><span t-field="o.total_peso">Libras</span>
        </td>
      </tr>
    </table>
  <br/><br/>
  <br/>

		<table class="table table-condensed" style="font-size:12px;border:1px solid black;">
        <thead style="background:gray;color:#FFFFFF;">
          <tr style="font-size:12px;">
            <th class="text-left" style="width:15%;border:1px solid black;">Bulto</th>
            <th class="text-center" style="width:15%;border:1px solid black;">Variedad</th>
            <th class="text-center" style="width:35%;border:1px solid black;">Nombre del producto</th>
            <th class="text-center" style="width:20%;border:1px solid black;">Clase</th> 
            <th class="text-center" style="width:15%;border:1px solid black;">Peso neto</th> 
          </tr>
        </thead>
        <tbody class="invoice_tbody" style="font-size:12px;">
          <tr t-foreach="o.stock_ids" t-as="l">
            <td class="text-left" style="border:1px solid black;">
                <span t-field="l.name"/>
            </td>
            <td class="text-center" style="border:1px solid black;">
               <span t-field="l.product_id.semilla_id.name"/>
            </td>
            <td class="text-left" style="border:1px solid black;">
                  <span t-field="l.product_id.name"/>
            </td>
            <td class="text-center" style="border:1px solid black;">
                <t t-set="clase" t-value="l.product_id.corte_id.name + ' ' + l.product_id.grado_id.name"/>
                <t t-esc="clase"/>
            </td>
             <td class="text-center" style="border:1px solid black;">
                <span t-field="l.cantidad"/>
            </td>
          </tr>
        </tbody>
    </table>
    <h4 class="text-left"><strong>Observaciones</strong></h4>
         <br/><br/>
    <p><span t-field="o.observaciones" /></p>
  </div>
  </div> 
      <!-- Esta etiqueta del footer es la que no funciona -->
  </t>
</t>


</template>
</data>
</odoo>
